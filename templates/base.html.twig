        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_location_index') }}">Pogodynka</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    {# --- LOCATION LINKS --- #}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_location_index') }}">Locations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_location_new') }}">Add Location</a>
                    </li>

                    {# --- MEASUREMENT LINKS --- #}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_measurement_index') }}">Measurements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_measurement_new') }}">Add Measurement</a>
                    </li>

                </ul>
            </div>
        </div>
