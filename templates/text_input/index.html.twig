{% extends 'base.html.twig' %}

{% block title %}Test TextInputController{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Text Submission Form</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
        {{ form_end(form) }}

        {% if submittedText is not empty %}
            <h2 class="mt-4">Submitted Text:</h2>

            {# 1. Wersja BEZ raw – Twig sam escapuje #}
            <p>{{ submittedText }}</p>

            {# 2. Wersja z raw – surowy HTML użytkownika #}
            <p>{{ submittedText|raw }}</p>
        {% endif %}

    </div>
{% endblock %}
